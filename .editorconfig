# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Basic
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4

# Matches every files either .json, .yml, .yaml or .html
[{*.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2

# Ignore paths
[/node_modules/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
